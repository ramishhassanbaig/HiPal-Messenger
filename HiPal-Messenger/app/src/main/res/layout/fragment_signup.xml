<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ramish.hipal_messenger.fragments.SignupFragment"
    android:orientation="vertical"
    android:background="@color/windowBackground"
    android:weightSum="4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        >

        <ImageButton
            android:id="@+id/back_button_login_input"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_arrow"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/app_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HI PAL !"
                android:textSize="24dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold|italic"
                android:textColor="@color/textColorPrimary"/>

            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:rotation="45"
                android:src="@drawable/hand_white"/>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/signup_screen1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="3.5"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/signup_indicator_selected"
                android:text="1"
                android:textColor="@color/textColorPrimary"
                android:paddingTop="5dp"
                android:textAlignment="center"
                />

            <View
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="@color/colorButton"
                />

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/signup_indicator_normal"
                android:text="2"
                android:paddingTop="5dp"
                android:textColor="@color/textColorPrimary"
                android:textAlignment="center"
                />

            <View
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="@color/colorButton"
                />

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/signup_indicator_normal"
                android:text="3"
                android:paddingTop="5dp"
                android:textColor="@color/textColorPrimary"
                android:textAlignment="center"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/first_name_field"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="First Name"
            android:textColorHint="@color/textColorPrimary"
            android:gravity="center"
            android:layout_margin="10dp"
            />

        <EditText
            android:id="@+id/last_name_field"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="Last Name"
            android:textColorHint="@color/textColorPrimary"
            android:gravity="center"
            android:layout_margin="10dp"
            />

        <EditText
            android:id="@+id/birth_date_field"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:hint="Date of Birth"
            android:textColorHint="@color/textColorPrimary"
            android:gravity="center"
            android:layout_margin="10dp"
            />

        <Spinner
            android:id="@+id/gender_field"
            android:layout_width="200dp"
            android:layout_height="40dp">

        </Spinner>

        <Button
            android:id="@+id/next1_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:textColor="@color/textColorPrimary"
            android:background="@drawable/button_background"
            android:drawableRight="@drawable/next_arrow"
            />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/signup_screen2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="3.5"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/signup_indicator_selected"
                    android:text="1"
                    android:textColor="@color/textColorPrimary"
                    android:paddingTop="5dp"
                    android:textAlignment="center"
                    />

                <View
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:background="@color/colorButton"
                    />

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/signup_indicator_selected"
                    android:text="2"
                    android:paddingTop="5dp"
                    android:textColor="@color/textColorPrimary"
                    android:textAlignment="center"
                    />

                <View
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:background="@color/colorButton"
                    />

                <TextView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/signup_indicator_normal"
                    android:text="3"
                    android:paddingTop="5dp"
                    android:textColor="@color/textColorPrimary"
                    android:textAlignment="center"
                    />

            </LinearLayout>


            <EditText
                android:id="@+id/email_field"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="First Name"
                android:textColorHint="@color/textColorPrimary"
                android:gravity="center"
                android:layout_margin="10dp"
                />

            <EditText
                android:id="@+id/password_field"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="Last Name"
                android:textColorHint="@color/textColorPrimary"
                android:gravity="center"
                android:layout_margin="10dp"
                />

            <EditText
                android:id="@+id/password_confirm_field"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="Date of Birth"
                android:textColorHint="@color/textColorPrimary"
                android:gravity="center"
                android:layout_margin="10dp"
                />

            <Button
                android:id="@+id/next2_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:padding="5dp"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:textColor="@color/textColorPrimary"
                android:background="@drawable/button_background"
                android:drawableRight="@drawable/next_arrow"
                />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/signup_screen3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="3.5"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/signup_indicator_selected"
                android:text="1"
                android:textColor="@color/textColorPrimary"
                android:paddingTop="5dp"
                android:textAlignment="center"
                />

            <View
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="@color/colorButton"
                />

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/signup_indicator_selected"
                android:text="2"
                android:paddingTop="5dp"
                android:textColor="@color/textColorPrimary"
                android:textAlignment="center"
                />

            <View
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="@color/colorButton"
                />

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/signup_indicator_selected"
                android:text="3"
                android:paddingTop="5dp"
                android:textColor="@color/textColorPrimary"
                android:textAlignment="center"
                />

        </LinearLayout>


        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/profile_pic_border"
            android:src="@drawable/avatar"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add your Profile Picture"
            android:textColor="@color/textColorPrimary"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:padding="5dp"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:textColor="@color/textColorPrimary"
            android:background="@drawable/button_background"
            />

    </LinearLayout>

</LinearLayout>
