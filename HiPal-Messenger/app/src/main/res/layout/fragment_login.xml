<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ramish.hipal_messenger.fragments.LoginFragment"
    android:orientation="vertical"
    android:background="@color/windowBackground"
    android:weightSum="4">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center"
       android:layout_weight="0.5">

       <TextView
           android:id="@+id/app_heading"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="HI PAL !"
           android:textSize="24dp"
           android:layout_marginTop="20dp"
           android:textStyle="bold|italic"
           android:textColor="@color/textColorPrimary"/>

       <ImageView
           android:id="@+id/app_icon"
           android:layout_width="150dp"
           android:layout_height="150dp"
           android:rotation="45"
           android:src="@drawable/hand_white"/>

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center"
       android:layout_weight="3.5">

       <Button
           android:id="@+id/signin_button"
           android:layout_width="250dp"
           android:layout_height="wrap_content"
           android:text="SignIn"
           android:gravity="center"
           android:padding="5dp"
           android:textSize="18dp"
           android:layout_margin="10dp"
           android:textColor="@color/textColorPrimary"
           android:background="@drawable/button_background"
           style="@style/SelectableItemBackground"
           />


       <ImageButton
           android:id="@+id/google_signin"
           android:layout_width="250dp"
           android:layout_height="50dp"
           android:layout_margin="10dp"
           android:background="@drawable/login_with_google"
           />

       <ImageButton
           android:id="@+id/facebook_signin"
           android:layout_width="250dp"
           android:layout_height="50dp"
           android:layout_margin="10dp"
           android:background="@drawable/login_with_facebook_new"
           />

       <Button
           android:id="@+id/signup_button"
           android:layout_width="250dp"
           android:layout_height="wrap_content"
           android:text="SignUp"
           android:padding="5dp"
           android:gravity="center"
           android:textSize="18dp"
           android:layout_margin="10dp"
           android:textColor="@color/textColorPrimary"
           android:background="@drawable/button_background"
           style="@style/SelectableItemBackground"
           />

   </LinearLayout>

</LinearLayout>
